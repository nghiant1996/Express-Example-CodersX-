extends ../layouts/common.pug

block content
	
	h1 Product
	
	.d-flex.flex-wrap.justify-content-center
		each product in products
			.card(style='width: 15rem;').mr-4.mb-4
				img.card-img-top(src= product.image, alt='...')
				.card-body
					h5.card-title= product.name
					p.card-text= product.description
					a.btn.btn-primary(href='#') Buy

		nav(aria-label='Search result page')
			ul.pagination
				li.page-item
					a.page-link(href=`?page=${pre}`) Previous
				li.page-item
					a.page-link(href='?page=1') 1
				li.page-item
					a.page-link(href='?page=2') 2
				li.page-item
					a.page-link(href='?page=3') 3
				li.page-item
					a.page-link(href=`?page=${next}`) Next

					
			






	

