extends ../layouts/common.pug
block content
  h1 All books
  
  table.table
    tr
      th Title
      th Delete
      th Update
    each book in books
      tr
        td= book.title
        td 
          a(href="/books/delete/" + book.id) Delete
        td 
          a(href="/books/update/" + book.id) Update
          
  