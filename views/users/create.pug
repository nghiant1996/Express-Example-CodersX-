extends ../layouts/common.pug
block content
  h1 Create User
  
  if errors
    each error in errors
      .alert.alert-danger= error
  form(action='/users/create' method='POST')
    .form-group
      label(for="name") Name
      input#name.form-control(name="name", type="text", value= value? value.name : '', required)
    .form-group
      label(for="email") Email
      input#name.form-control(name="email", type="text", value= value? value.mail : '', required)
      
    button.btn.btn-primary Create
